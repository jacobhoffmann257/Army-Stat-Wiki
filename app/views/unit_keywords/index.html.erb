<div>
  <div>
    <h1>
      List of all unit keywords
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new unit keyword
    </h2>

    <form action="/insert_unit_keyword" method="post">
      <div>
        <label for="unit_id_box">
          Unit
        </label>

        <input type="text" id="unit_id_box" name="query_unit_id">
      </div>

      <div>
        <label for="keyword_id_box">
          Keyword
        </label>

        <input type="text" id="keyword_id_box" name="query_keyword_id">
      </div>

      <button>
        Create unit keyword
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Unit
        </th>

        <th>
          Keyword
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_unit_keywords.each do |a_unit_keyword| %>
      <tr>
        <td>
          <%= a_unit_keyword.id %>
        </td>

        <td>
          <%= a_unit_keyword.unit_id %>
        </td>

        <td>
          <%= a_unit_keyword.keyword_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_unit_keyword.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_unit_keyword.updated_at) %> ago
        </td>

        <td>
          <a href="/unit_keywords/<%= a_unit_keyword.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
