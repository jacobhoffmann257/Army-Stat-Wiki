<div id="<%= dom_id unit %>">
   <div class= "container border">
      <div class="row border">
         <div class= "col ">
            <ul class="list-group">
               <li class="list-group-item" id="list_<%= dom_id unit%>"><%= unit.name %><%= unit.base_size%>
               </li>
               <li class="list-group-item">
                <button class= "btn btn-primary" >
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                  </svg>
                </button>
               </li>
            </ul>
         </div>

         <div class= "col ">
               <%= image_tag(unit.picture)%>
         </div>
      </div>

      <div class="row border align-items-center">
         <div class="col justify-content-md-center">
            <div>             
               <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#<%= unit.id %>" aria-expanded="false" aria-controls="collapseExample">
                        <svg xmlns="http://www.w3.org/2000/svg" width="100" height="20" fill="currentColor" class="bi bi-arrow-bar-down align-items-center" viewBox="0 0 16 16">
                           <path fill-rule="evenodd" d="M1 3.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5M8 6a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 0 1 .708-.708L7.5 12.293V6.5A.5.5 0 0 1 8 6"/>
                        </svg>
               </button>
            
               <div class="collapse" id= "<%= unit.id %>">
                  <div class="card card-body">
                     <%= render "units/unit", unit: unit  %>
                  </div>
               </div>
            </div>
         </div>

         </div>
      </div>
   </div>
</div>
