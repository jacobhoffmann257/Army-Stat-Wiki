<div id="<%= dom_id unit %>_fav">
  <div class="d-flex align-items-right">
    <% if current_user%>
      <% fav = current_user.favorites.find_by(unit: unit)%>
      <% if fav %> 
          <%= link_to delete_favorite_path(fav), method: :delete, class: "btn btn-primary", remote: false do %>
              <i class="fa-regular fa-star fa-xl"></i>
              
              <input type="hidden" id="unit" name="query_unit_id" value="<%= unit.id %>">
              <input type="hidden" id="user" name="query_user_id" value="<%= current_user.id %>">
            <% end %>

      <% else %>
        <%= render "favorites/form", unit: unit%>
      <% end %>
    <% end %>
  </div>

</div>
