<div>
  <div>
    <h1>
      Keyword #<%= @the_keyword.id %> details
    </h1>

    <div>
      <div>
        <a href="/keywords">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_keyword/<%= @the_keyword.id %>">
          Delete keyword
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_keyword.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_keyword.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_keyword.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit keyword
    </h2>

    <form action="/modify_keyword/<%= @the_keyword.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_keyword.name %>">
      </div>

      <button>
        Update keyword
      </button>
    </form>
  </div>
</div>

<hr>
