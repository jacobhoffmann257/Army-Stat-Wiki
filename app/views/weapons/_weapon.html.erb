<div id="<%= dom_id weapon %>">
  <div class="container text-center">
    <div class="row">
      <div class="col">
        <p>
          <%= weapon.name %>
        </p>
      </div>
      <div class="col">
        <% if weapon.range %>
          <p>
            <strong>Range: </strong>
              Melee
          </p>
        <% else %>
          <p>
            <strong>Range:</strong>
            <%= weapon.range %>
          </p>
        <% end%>
      </div>
      <div class="col">
        <% weapon.profile.each do |profile|%>
          <%= render "profiles/profile", profile: profile%>
        <% end %>
      </div>
    </div>
</div>
